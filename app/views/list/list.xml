<Page loaded="loaded">
  <Page.actionBar>
    <ActionBar title="Groceries">
      <ActionBar.actionItems>
        <ActionItem text="Share" tap="share" android.systemIcon="ic_menu_share_holo_dark" ios.systemIcon="9" ios.position="right" />
      </ActionBar.actionItems>
    </ActionBar>
  </Page.actionBar>

  <GridLayout rows="auto, *">

    <GridLayout row="0" columns="*, auto" class="add-bar">
      <TextField id="grocery" text="{{ grocery }}" hint="Enter a grocery item" col="0" />
      <Image src="res://add" tap="add" col="1"></Image>
    </GridLayout>

    <ListView items="{{ groceryList }}" id="groceryList" row="1" class="m-5">
      <ListView.itemTemplate>
        <GridLayout columns="*, auto">
          <Label text="{{ name }}" class="m-10" />
          <StackLayout col="1" class="delete-container" tap="delete">
            <Image src="res://delete"></Image>
          </StackLayout>
        </GridLayout>
      </ListView.itemTemplate>
    </ListView>

    <ActivityIndicator busy="{{ isLoading }}" row="1" horizontalAlignment="center" verticalAlignment="center" />

  </GridLayout>
</Page>