<Page loaded="loaded">
  <FlexboxLayout flexDirection="column" alignItems="center" justifyContent="center">
    <StackLayout id="container">
      <Image src="res://logo_login" stretch="none" horizontalAlignment="center"></Image>

      <TextField id="email" text="{{ email }}" hint="Email Address" keyboardType="email" autocorrect="false" autocapitalizationType="none" />
      <TextField id="password" secure="true" text="{{ password }}" hint="Password" />

      <Button text="Sign in" tap="submit" class="submit-button" />
      <Button text="Sign up for Groceries" class="link" tap="toggleDisplay" />
    </StackLayout>
  </FlexboxLayout>
</Page>